/* miniprogram/pages/manage/manage.wxss */
.swiper-tab{
    width: 100%;
    border-bottom: 2rpx solid #ccc;
    text-align: center;
    height: 88rpx;
    line-height: 88rpx;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
}
.swiper-tab-item{
    width: 30%; 
    color:#434343;
}
.active{
    color:#F65959;
    border-bottom: 4rpx solid #F65959;
}
.swiper{
  text-align: center;
}
.record-container-even {
    width: 100%;
    height: 100rpx;
    background:  #DD632F;
    padding: 0 40rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    color: #FBE8BC;
    font-Size: 30rpx;
    font-weight: bolder;
  }
  .record-container-odd {
    width: 100%;
    height: 100rpx;
    background: rgb(28, 92, 134);
    padding: 0 40rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    color: #FBE8BC;
    font-Size: 30rpx;
    font-weight: bolder;
  }