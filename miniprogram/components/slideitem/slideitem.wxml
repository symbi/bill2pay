<!--components/slideitem/slideitem.wxml-->
<view class='slide-item' style='height: {{cellHeight}}' data-row="{{row}}">
	<view
	 class='item-inner item-content clearfix'
	 bindtouchstart="touchS"
	 bindtouchmove="touchM"
	 bindtouchend="touchE"
   style="{{slideStyle}};background-color: {{itemColor}};height:{{heightProcent}}"
	 catchtap='selectAction'
	>
		<!-- 这里是组件的内部节点 -->
		<slot/>
	</view>
	<view class='item-inner btn del' style='line-height: {{cellHeight}};height:{{heightProcent}}'
   data-indexpath="{{section}}-{{row}}" bindtap="delItem">
    删除
  </view>
  
	<view wx:if="{{actName==actLightName}}" class='item-inner btn payed'
    style='background-color: {{actLightColor}}; line-height: {{cellHeight}};height:{{heightProcent}}' bindtap="actCustom">
    {{actName}}
	</view>
  <view wx:else class='item-inner btn unpayed'
    style='line-height: {{cellHeight}};height:{{heightProcent}}' bindtap="actCustom">
    {{actName}}
	</view>
</view>

<!-- wxml内调用方式 
itemColor: cell背景色
deleteItemEvent:绑定删除事件
slideItemEvent:绑定左滑动打开
cellHeight:cell高度

<view wx:for="{{cellDataArray}}" wx:for-item="cellData" wx:key="{{index}}">
  <slideitem id="slideitem-{{index}}" 
           row="{{index}}"
           section="{{自定义section}}"
           itemColor="#fff"
           bind:deleteItemEvent='deleteAction' 
           bind:slideItemEvent='slideAction' 
           cellHeight="80rpx">
      <内部放入自定义视图>
  </slideitem>
</view>
-->
