/* components/clearInput/clearInput.wxss */

.input {
    font-size: 30rpx;
    border-bottom:2rpx solid #ddd;
    color:rgb(95, 18, 18);
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width:100%;
    padding-left:12rpx;
}
.grey{
    color:grey;
}
.input.square {
    display: -webkit-flex;
    margin: 16rpx;
    font-size: 24rpx;
    padding: 8rpx 14rpx 8rpx 8rpx;
    border-radius: 16rpx;
    border: 1rpx solid gray;
    align-items: center;
}

.searchImg {
    width: 35rpx;
    height: 35rpx;
    vertical-align: center;
}
.clear {
    width:50rpx;
    height:20rpx;
    align-items: center;
    justify-content: center; 
    display: flex;
}
.clearImgShow {
    width: 35rpx;
    height: 35rpx;
    vertical-align: center;
}

.clearImgHide {
    display: none;
}